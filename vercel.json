{
  "version": 2,
  "builds": [
    {
      "src": "api/cron.py",
      "use": "@vercel/python",
      "config": { "buildCommand": "vercel-build.sh" }
    }
  ],
  "routes": [
    {
      "src": "/api/cron",
      "dest": "api/cron.py"
    }
  ],
  "functions": {
    "api/cron.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 0 * * *"
    }
  ]
}
